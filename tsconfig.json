{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "webworker"],
    "moduleResolution": "Node",
    "types": ["vite/client"],
    "strict": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,

    "baseUrl": "./",
    "paths": {
      "init": ["src/init.ts"],
      "local/*": [".local/"],
      "misc/*": ["src/misc/*"],
      "utils": ["src/utils.ts"],
      "vendors/*": ["dist/vendors/*"]
    },
  },
  "include": ["src", "types"]
}