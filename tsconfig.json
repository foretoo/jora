{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "webworker"],
    "moduleResolution": "Node",
    "types": ["vite/client", "@types/three", "@types/dat.gui"],
    "strict": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "init": ["./src/init.ts"],
      "utils": ["./src/utils.ts"],
      "misc/*": ["./src/misc/*"],
      "vendors/*": ["./dist/vendors/*"]
    }
  },
  "include": ["src", "types"]
}