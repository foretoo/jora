{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "types": ["vite/client", "@types/three", "@types/dat.gui"],
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true,
    "typeRoots": ["src/glsl.d.ts"]
  },
  "include": ["src"],
  "exclude": ["src/lib"]
}