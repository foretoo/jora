{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "webworker"],
    "moduleResolution": "Node",
    "types": ["vite/client", "@types/three", "@types/dat.gui"],
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true,
    "typeRoots": ["src/glsl.d.ts"],
    "paths": {
      "init": ["./src/init.ts"],
      "misc": ["./src/misc"],
      "misc/*": ["./src/misc/*"]
    }
  },
  "include": ["src"],
  "exclude": ["src/lib"]
}